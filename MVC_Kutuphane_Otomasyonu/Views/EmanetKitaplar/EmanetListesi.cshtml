@model List<MVC_Kutuphane_Otomasyonu.Entities.Model.EmanetKitaplar>

@{
    ViewBag.Title = "EmanetListesi";
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<head>
    <title>Emanet Kitaplar Listesi</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

            table th td {
                border: 1px solid black;
            }

        th td {
            padding: 8px;
            text-align: left;
        }
    </style>
</head>
<body>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <td>Üye</td>
                <td>Kitap</td>
                <td>Kitap Sayısı</td>
                <td>Aldığı Tarih</td>
                <td>İade Tarih</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(x => item.Id)</th>
                    <td>@Html.DisplayFor(x => item.Uyeler.AdiSoyadi)</td>
                    <td>@Html.DisplayFor(x => item.Kitaplar.KitapAdi)</td>
                    <td>@Html.DisplayFor(x => item.KitapSayisi)</td>
                    <td>@Html.DisplayFor(x => item.KitapAldigiTarihi)</td>
                    <td>@Html.DisplayFor(x => item.KitapIadeTarihi)</td>

                </tr>
            }
        </tbody>
    </table>
</body>




