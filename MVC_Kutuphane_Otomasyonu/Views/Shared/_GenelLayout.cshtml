@using MVC_Kutuphane_Otomasyonu.Entities.Model
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>MVC Kütüphane Otomasyonu</title>
    <link rel="icon" type="image/x-icon" href="~/GenelLayout/startbootstrap-small-business-master/dist/assets/favicon.ico" />
    <link href="~/GenelLayout/startbootstrap-small-business-master/dist/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container px-5">
            <a class="navbar-brand" href="/Home/Index/">MVC KÜTÜPHANE OTOMASYONU</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Sol Menü -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Ana Sayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Duyurular">Duyurular</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/About">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">İletişim</a></li>
                </ul>

                <!-- Sağ Menü (Giriş & Profil) -->
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @if (Session["AktifKullanici"] != null)
                    {
                        var kullanici = (Kullanicilar)Session["AktifKullanici"];
                        <li class="nav-item">
                            <a class="nav-link text-warning" href="/Istatistikler/Index">Admin Panel</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-user-shield me-2"></i>@kullanici.KullaniciAdi
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Home/Logout">Çıkış Yap</a></li>
                            </ul>
                        </li>
                    }
                    else if (Session["AktifUye"] != null)
                    {
                        var uye = (Uyeler)Session["AktifUye"];
                        <li class="nav-item">
                            <a class="nav-link text-info" href="/Home/Emanetlerim">Emanetlerim</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <img src="@Url.Content(uye.ResimYolu ?? "~/Content/default-avatar.png")" class="rounded-circle me-2" width="30" height="30" />
                                @uye.AdiSoyadi
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Home/Profil">Profil</a></li>
                                <li><a class="dropdown-item" href="/Home/Logout">Çıkış Yap</a></li>
                            </ul>

                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Home/Login">Giriş Yap</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Register">Kayıt Ol</a></li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- Sayfa İçeriği -->
    <div class="container px-4 px-lg-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="py-5 bg-white">
        <div class="container px-4 px-lg-5">
            <p class="m-0 text-center text-dark">Copyright &copy; 2025 MVC Kütüphane Otomasyonu</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/GenelLayout/startbootstrap-small-business-master/dist/js/scripts.js"></script>
</body>
</html>
