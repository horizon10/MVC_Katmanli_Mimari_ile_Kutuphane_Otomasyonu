@model MVC_Kutuphane_Otomasyonu.Entities.Model.Kitaplar
@{
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
    ViewBag.Title = "Kitap Detayı";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@Model.KitapAdi</h3>
                </div>
                <div class="card-body">
                    <p><strong>Yazar:</strong> @Model.YazarAdi</p>
                    <p><strong>Yayın Evi:</strong> @Model.YayinEvi</p>
                    <p><strong>Sayfa Sayısı:</strong> @Model.SayfaSayisi</p>
                    <p><strong>Stok Adedi:</strong> @Model.StokAdedi</p>
                    <p><strong>Tür:</strong> @Model.KitapTurleri.KitapTuru</p>
                    <p><strong>Barkod No:</strong> @Model.BarkodNo</p>
                    <p><strong>Açıklama:</strong> @Model.Aciklama</p>
                    <p><strong>Ekleme Tarihi:</strong> @Model.EklemeTarihi.ToString("dd.MM.yyyy")</p>
                    <a href="/Home/Index" class="btn btn-secondary mt-3"><i class="fa fa-arrow-left me-1"></i> Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>
