@{
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
    ViewBag.Title = "Home Page";
}

<main class="container mt-4">

    <!-- DUYURULAR -->
    <section class="mb-5">
        <h2 class="text-center mb-4">📢 Duyurular</h2>
        <div class="list-group">
            @if (ViewBag.DuyurularListesi != null)
            {
                foreach (var duyuru in ViewBag.DuyurularListesi as List<MVC_Kutuphane_Otomasyonu.Entities.Model.Duyurular>)
                {
                    <div class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1 font-weight-bold">@duyuru.Baslik</h5>
                            <small class="text-muted">@duyuru.Tarih.ToString("dd.MM.yyyy")</small>
                        </div>
                        <p class="mb-1">@duyuru.Duyuru</p>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">Henüz bir duyuru bulunmamaktadır.</div>
            }
        </div>
    </section>

    <!-- KİTAPLAR -->
    <section>
        <h2 class="text-center mb-4">📚 Kitaplar</h2>
        <div class="row">
            @if (ViewBag.KitaplarListesi != null)
            {
                foreach (var kitap in ViewBag.KitaplarListesi as List<MVC_Kutuphane_Otomasyonu.Entities.Model.Kitaplar>)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title text-primary">@kitap.KitapAdi</h5>
                                <p class="card-text"><strong>Yazar:</strong> @kitap.YazarAdi</p>
                                <p class="card-text"><strong>Tür:</strong> @kitap.KitapTurleri.KitapTuru</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-warning">Gösterilecek kitap bulunamadı.</div>
                </div>
            }
        </div>
    </section>
</main>
