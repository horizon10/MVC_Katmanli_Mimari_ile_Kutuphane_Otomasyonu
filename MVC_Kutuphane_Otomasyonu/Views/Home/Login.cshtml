@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
}
<h2>Giriş Yap</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" name="sifre" class="form-control" required />
    </div>
    <div class="form-check my-2">
        <input class="form-check-input" type="checkbox" name="beniHatirla" id="beniHatirla" />
        <label class="form-check-label" for="beniHatirla">Beni hatırla</label>
    </div>
    <button type="submit" class="btn btn-success">Giriş Yap</button>
}

@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger mt-2">@ViewBag.Hata</div>
}
