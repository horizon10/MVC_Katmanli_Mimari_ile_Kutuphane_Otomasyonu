@model List<MVC_Kutuphane_Otomasyonu.Entities.Model.Duyurular>
@{
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
    ViewBag.Title = "Duyurular";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-bullhorn me-2"></i> Duyurular</h2>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="list-group">
                            @foreach (var duyuru in Model)
                            {
                                <div class="list-group-item list-group-item-action mb-3 rounded">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h4 class="mb-2 text-primary">@duyuru.Baslik</h4>
                                        <small class="text-muted">@duyuru.Tarih.ToString("dd.MM.yyyy")</small>
                                    </div>
                                    <p class="mb-1">@duyuru.Duyuru</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i> Henüz bir duyuru bulunmamaktadır.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>