@model MVC_Kutuphane_Otomasyonu.Entities.Model.KullaniciRolleri
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="rom">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>@ViewBag.kullaniciAdi İçin Rol Ekleme İşlemi</b>
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Duzenle", "KullaniciRolleri", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @* @Html.DisplayNameFor(x => x.KullaniciId)*@
                        @Html.HiddenFor(x => x.KullaniciId, new { @class = "form-control"})
                        @Html.ValidationMessageFor(x => x.KullaniciId, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.RolId)
                        @Html.DropDownListFor(x => x.RolId, (SelectList)ViewBag.Liste, "-Seçim Yapınız-", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.RolId, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-info">Kaydet</button>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
