@model MVC_Kutuphane_Otomasyonu.Entities.Model.KitapTurleri
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="rom">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Kitap Türü Ekleme Sayfası
            </div>
            <div class="ibox-body">
                <form action="Ekle" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false,"",new { @class = "text-danger" })
                    <div class="form-group">
                        Kitap Türü:
                        <input type="text" name="KitapTuru" class="form-control"/>
                        @Html.ValidationMessageFor(x=>x.KitapTuru,"",new {@class="text-danger"})
                    </div>
                    <div class="form-group">
                        <textarea name="Aciklama" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Ekle" class="btn btn-success" />
                        <a href="@Url.Action("Index", "KitapTurleri")" class="btn btn-secondary">İptal / Geri Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
