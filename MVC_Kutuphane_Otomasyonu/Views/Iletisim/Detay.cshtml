@model MVC_Kutuphane_Otomasyonu.Entities.Model.Iletisim
@{
    ViewBag.Title = "Mesaj Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mb-3">Mesaj Detayı</h3>

<div class="card p-4">
    <p><strong>Adı Soyadı:</strong> @Model.AdiSoyadi</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Başlık:</strong> @Model.Baslik</p>
    <p><strong>Mesaj:</strong><br /> @Model.Mesaj</p>
    <p><strong>Açıklama:</strong><br /> @Model.Aciklama</p>
    <p><strong>Tarih:</strong> @Model.Tarih.ToString("dd.MM.yyyy HH:mm")</p>

    <a href="/Iletisim/Index" class="btn btn-secondary mt-3">Geri Dön</a>
</div>
